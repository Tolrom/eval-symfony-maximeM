{% extends 'base.html.twig' %}

{% block title %}Tasklist{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tasklist</h1>

    {% for task in tasks %}
        <div class="task">
            <h2>{{ task.title }}</h2>
            <p>{{ task.content }}</p>
            <p><strong>Status:</strong> {{ task.status ? 'Done' : 'To do' }}</p>
            <p><strong>Created at:</strong> {{ task.createdAt|date('Y-m-d H:i:s') }}</p>
        </div>
        <hr>
    {% endfor %}
    <a href="{{ path('app_task_add') }}">Add task</a>
</div>
{% endblock %}
